<% if (post.photos && post.photos.length){ %>
<div class="article-gallery">
  <a class="mask-layer" href="<%- url_for(post.path) %>"></a>
  <div class="article-gallery-photos">
    <% post.photos.forEach(function(photo, i){ %>
      <a class="article-gallery-img fancybox" href="<%- url_for(post.path) %>" rel="gallery_<%= post._id %>">
        <img class="lazyload" src="http://cdn.img.sanphantom.com/thumbnail/loading.gif" data-src="<%- url_for(photo) %>" itemprop="image">
      </a>
    <% }) %>
  </div>
</div>
<% } %>
